#!/bin/sh
#
# the development docker image runs this script by default
# to start the application. To start the docker container
# for development, use ./docker/app

set -ex

if [ -z $CBROOT ]; then
  export CBROOTLOCAL=`pwd`
  export CBROOT=$CBROOTLOCAL/combust
fi

confd -onetime -confdir=confd -backend env
export CBCONFIG=/tmp/combust.conf

exec ./combust/bin/httpd
